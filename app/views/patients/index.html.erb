<div class="container">
    <div class="row-fluid">  
        <h2>Lista de Pacientes</h2>

        <table id="patients" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Morada</th>
                    <th>Data de nascimento</th>
                    <th>Sexo</th>
                    <th>Profiss√£o</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            <% @patients.each do |patient| %>
                <tr onClick="window.location.href = '<%= url_for patient  %>'">
                    <td><%= link_to patient.name, patient%></td>
                    <td><%= patient.login.email %></td>
                    <td><%= patient.address %></td>
                    <td><%= patient.date_of_birth %></td>
                    <td><%= patient.gender.description %></td>
                    <td><%= patient.profession %></td>
                    <td><%= link_to 'Abrir', patient, :class => 'btn btn-primary' %></td>
                </tr>
            <% end %>
            </tbody>
        </table>
    </div>
</div>