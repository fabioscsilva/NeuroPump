<div class="container">
	<div class="row-fluid">
		<h2>Lista de Pacientes</h2>

		<table id="patients" class="table table-striped table-hover">
			<thead>
				<tr>
					<th>Nome</th>
					<th>Email</th>
					<th>Telefone</th>
					<th>Telem√≥vel</th>
				</tr>
			</thead>
			<tbody>
				<% @patients.each do |patient| %>
				<tr onMouseOver="this.style.cursor ='pointer'" onClick="window.location.href = '<%= url_for patient  %>'">
					<td><%= link_to patient.name, patient%></td>
					<td><%= patient.login.email %></td>
					<td><%= patient.telephone %></td>
					<td><%= patient.mobilephone %></td>
				</tr>
				<% end %>
			</tbody>
		</table>

	</div>
	<% if current_login.has_role? :secretary%>
	<div>
		<%= link_to 'Criar Novo Paciente', new_patient_path(), :class => "btn btn-success pull-right", :style => "margin-top:10px;" %>
	</div>
	<% end %>

</div>