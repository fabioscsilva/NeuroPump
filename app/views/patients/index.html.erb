<div class="container" id="la-slide">
	<div class="row-fluid">
		<h2 class="h2-title">Lista de Pacientes</h2>

		<table id="patients" class="table table-striped table-hover">
			<thead>
				<tr>
					<th>Nome</th>
					<th>Email</th>
					<th>Telefone</th>
					<th>Telem√≥vel</th>
				</tr>
			</thead>
			<tbody>
				<% @patients.each do |patient| %>
				<tr id="teste" onMouseOver="this.style.cursor ='pointer'" href="<%= url_for patient  %>">
					<td>
						<%= image_tag patient.photo.url, :size => "30x30", :style => "margin-right: 20px;" %>
						<%= link_to patient.name, patient%></td>
					<td><%= patient.login.email %></td>
					<td><%= patient.telephone %></td>
					<td><%= patient.mobilephone %></td>
				</tr>
				<% end %>
			</tbody>
		</table>

	</div>
	<% if current_login.has_role? :secretary%>
	<div>
		<%= link_to 'Criar Novo Paciente', new_patient_path(), :class => "btn btn-success pull-right", :style => "margin-top:10px;" %>
	</div>
	<% end %>

</div>

