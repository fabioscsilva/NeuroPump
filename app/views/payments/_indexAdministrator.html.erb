
<table id="payments" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Clínica</th>
                    <th>Valor</th>
                    <th>Data de Emissão</th>
                    <th>Data de Limite</th>
                    <th>Data de Pagamento</th>
                    <th>Estado</th>

                </tr>
            </thead>
            <tbody>
            <% @payments.each do |payment| %>
                    <td><%= link_to payment.clinic.name, payment.clinic%></td>
                    <td>€<%= payment.value %></td>
                    <td><%= payment.creation_date.strftime("%d-%m-%Y") %></td>
                    <td><%= payment.due_date.strftime("%d-%m-%Y") %></td>
                    <td><%= payment.payment_date.strftime("%d-%m-%Y") if payment.payment_date %></td>
                    <td><% if payment.payed == true %>
                            <%= "Pago" %>
                         <% elsif payment.payed == false %>
                            <%= "Nao Pago" %>
                        <%end%>   
                    </td>
                </tr>
            <% end %>
            </tbody>
</table>
<%= link_to "Atualizar Consumos Semanais", {:controller => :packages_clinics, :action => :update}, :class => "btn btn-primary pull-right span1.5" %>
<%= link_to "Verificar Estado de Pagamentos", {:controller => :payments, :action => :check}, :class => "btn btn-primary pull-right span1.5" %>
<%= link_to "Gerar Referências de Pagamentos", {:controller => :payments, :action => :generate}, :class => "btn btn-primary pull-right" %>