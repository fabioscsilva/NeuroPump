<div class="container">
	<div class="row-fluid">
		<div class="span8 offset2">
			<div class="span4 pull-right" style = "margin-top: 20px;">
				<%= image_tag @neuropsychologist.photo.url %>
				<%= link_to 'Editar', edit_neuropsychologist_path(@neuropsychologist), :class => "btn btn-warning pull-right span12", :style => "margin-top:10px;" %>
				<%if current_login.has_role? :manager %>
				<% if @neuropsychologist.active == true %>
				<%= link_to 'Desativar', neuropsychologist_path(@neuropsychologist), :method => :delete, :confirm => "Tem a certeza?", :class => "btn btn-danger pull-right span12", :style => "margin-top:10px;" %>
				<%else%>
				<%= link_to 'Ativar', neuropsychologist_path(@neuropsychologist), :method => :delete, :confirm => "Tem a certeza?", :class => "btn btn-success pull-right span12", :style => "margin-top:10px;" %>
				<%end%>
				<%end%>
			</div>
			<div class="span8">
				<h3 style="margin-bottom: 30px;"> <%= @neuropsychologist.name %> </h3>
				<div class="row-fluid">
					<div class="span3">
						<b>BI</b>
					</div>
					<div class="span9">
						<%= @neuropsychologist.identification_code %>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span3">
						<b>Morada</b>
					</div>
					<div class="span9">
						<%= @neuropsychologist.address %>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span3">
						<b>Sexo</b>
					</div>
					<div class="span9">
						<%= @neuropsychologist.gender.description %>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span3">
						<b>Data de Nascimento</b>
					</div>
					<div class="span9">
						<%= @neuropsychologist.date_of_birth %>
					</div>
				</div>
				<br/>
				<div class="row-fluid">
					<div class="span3">
						<b>Telefone</b>
					</div>
					<div class="span9">
						<% if @neuropsychologist.telephone.to_str.blank?  %>
						Sem contacto
						<% else %>
						<%= @neuropsychologist.telephone %>
						<% end %>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span3">
						<b>Telemóvel</b>
					</div>
					<div class="span9">
						<% if @neuropsychologist.mobilephone.to_str.blank?  %>
						Sem contacto
						<% else %>
						<%= @neuropsychologist.mobilephone %>
						<% end %>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span3">
						<b>Email</b>
					</div>
					<div class="span9">
						<%= @neuropsychologist.login.email %>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="span3"></div>
</div>

