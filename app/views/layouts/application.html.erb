<!doctype html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width">
		<title><%= content_for?(:title) ? yield(:title) : "NeuroPump" %></title>
		<meta name="description" content="">
		<meta name="author" content="NeuroPump">

		<%= stylesheet_link_tag 'application' %>
		<%= stylesheet_link_tag 'appointments' %>
		<%= stylesheet_link_tag 'datepicker' %>
		<%= stylesheet_link_tag 'fancybox' %>
		<%= stylesheet_link_tag 'global' %>
		<%= stylesheet_link_tag 'hover' %>
		<%= stylesheet_link_tag 'icons' %>
		<%= stylesheet_link_tag 'icons-color' %>
		<%= stylesheet_link_tag 'parallax-slider' %>
		<%= stylesheet_link_tag 'social-icons' %>

		<%= stylesheet_link_tag 'bootstrap' %>
		<%= stylesheet_link_tag 'bootstrap-responsive' %>
		<%= stylesheet_link_tag 'bootstrap_and_overrides' %>
		<%= javascript_include_tag "application" %>

		<%= csrf_meta_tags %>

		<!-- imports do css a mao para nao dar erro no servidor -->

	</head>
	<body>
		<header class="navbar navbar-fixed-top clearfix" style="border-bottom: 1px solid #e8e8e8;">
			<%= render 'layouts/navigation' %>
		</header>
		<div id="main" role="main" style="margin-top: 20px;">
			<div class="container">
				<div class="content">
					<div class="row">
						<div class="span12">
							<%= render 'layouts/messages' %>
							<%= yield %>
						</div>
					</div>

				</div>
			</div>
			<!--! end of .container -->
		</div>
		<!--! end of #main -->
		<footer>
			<div class="pull-right" style="  padding-right: 50px;">
				Copyright &copy; NeuroPump | Designed by NeuroPump
			</div>
		</footer>
	</body >
	
</html>
