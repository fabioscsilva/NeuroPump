<%= form_for(@clock) do |f| %>
<% if @clock.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@clock.errors.count, "error") %> prohibited this clock from being saved:</h2>

	<ul>
		<% @clock.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="container">
	<div class="row-fluid">
		<div class="span12">
			<div class="span3 pull-left">
				<legend>
					Sessão
				</legend>
				<div class="well">
					<ul class="nav nav-list" style="float:none">
						<li>
							<a href="#"><i class="icon-chevron-right"></i> TMT</a>
						</li>
						<li>
							<a href="#"><i class="icon-chevron-right"></i> FTT</a>
						</li>
						<li class="active">
							<a href="#"><i class="icon-chevron-right"></i> Relógio</a>
						</li>
					</ul>
				</div>
			</div>
			<div class="span9">
				<legend>
					Teste do Relógio
					<%= link_to 'Template',{:controller => "clocks", :action => "download" }, :class => "pull-right" %>
				</legend>

				<b>Critérios de Pontuação do Teste do relógio (J. Cacho et al.):</b>
				<table id="" class="table table-hover table-bordered table-striped">
					<tbody>
						<tr>
							<td>1. Mostrador do Relógio (máximo 2 pontos)</td>
							<td>
							<div class="btn-group" data-toggle="buttons-radio">
								<%= f.radio_button :screen_result, "0" %>
								<%= f.radio_button :screen_result, "1" %>
								<%= f.radio_button :screen_result, "2" %>
							</div></td>
						</tr>
						<tr>
							<td>2. Presença ou sequência dos números (máximo 4 pontos)</td>
							<td>
							<div class="btn-group" data-toggle="buttons-radio">
								<%= f.radio_button :number_seq_result, "0" %>
								<%= f.radio_button :number_seq_result, "1" %>
								<%= f.radio_button :number_seq_result, "2" %>
								<%= f.radio_button :number_seq_result, "3" %>
								<%= f.radio_button :number_seq_result, "3.5" %>
								<%= f.radio_button :number_seq_result, "4" %>
							</div></td>
						</tr>
						<tr>
							<td>3. Presença e localização dos ponteiros (máximo 4 pontos)</td>
							<td>
							<div class="btn-group" data-toggle="buttons-radio">
								<%= f.radio_button :pointers_loc_result, "0" %>
								<%= f.radio_button :pointers_loc_result, "1" %>
								<%= f.radio_button :pointers_loc_result, "2" %>
								<%= f.radio_button :pointers_loc_result, "3" %>
								<%= f.radio_button :pointers_loc_result, "3.5" %>
								<%= f.radio_button :pointers_loc_result, "4" %>
							</div></td>
						</tr>
					</tbody>
				</table>
				<b>Observações:</b>
				<%=f.text_area :observations, :rows => 5, :class => "span12", :style => "resize:vertical;"%>
<!-- 				<label class="pull-right">Total:7</label> -->
			</div>
		</div>
	</div>
</div>

<div class="actions">
	<%= f.submit :Terminar ,:class => "btn btn-success span2 pull-right"%>
</div>
<% end %>
