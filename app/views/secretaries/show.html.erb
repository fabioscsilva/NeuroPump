<div class="container">
	<div class="row-fluid">
		<div class="span8 offset2">
			<div class="span4 pull-right" style = "margin-top: 20px;">
				<%= image_tag @secretary.photo.url %>
				<!-- <button type="button" class="btn-success" style="width:100%; margin-top:10px;" >Editar Perfil</button>
				<button type="button" class="btn-danger" style="width:100%; margin-top:10px;">Remover Perfil</button> -->
				<%= link_to "Editar", edit_secretary_path(@secretary), :method => "get", :class => "btn btn-warning pull-right span12", :style => "margin-top:10px;"%>
				<%= link_to "Desativar", @secretary, :method => :delete, :confirm => "Tem a certeza?",  :class => "btn btn-danger pull-right span12", :style => "margin-top:10px;" %>
			</div>
			<div class="span8">
				<h3 style="margin-bottom: 30px;"><%= @secretary.name %></h3>
				<div class="row-fluid">
					<div class="span3">
						<b>BI</b>
					</div>
					<div class="span9">
						<%= @secretary.identification_code %>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span3">
						<b>Morada</b>
					</div>
					<div class="span9">
						<%= @secretary.address %>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span3">
						<b>Sexo</b>
					</div>
					<div class="span9">
						<%= @secretary.gender.description %>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span3">
						<b>Data de Nascimento</b>
					</div>
					<div class="span9">
						<%= @secretary.date_of_birth %>
					</div>
				</div>
				<br/>
				<div class="row-fluid">
					<div class="span3">
						<b>Telefone</b>
					</div>
					<div class="span9">
						<% if @secretary.telephone.to_str.blank?  %>
							Sem contacto
						<% else %>
							<%= @secretary.telephone %>
						<% end %>	
					</div>
				</div>
				<div class="row-fluid">
					<div class="span3">
						<b>Telem√≥vel</b>
					</div>
					<div class="span9">
						<% if @secretary.mobilephone.to_str.blank?  %>
							Sem contacto
						<% else %>
							<%= @secretary.mobilephone %>
						<% end %>						
					</div>
				</div>
				<div class="row-fluid">
					<div class="span3">
						<b>Email</b>
					</div>
					<div class="span9">
						<%= @secretary.login.email %>
					</div>
				</div>
				<br/>
			</div>

		</div>
	</div>
	<div class="span3"></div>
</div>

