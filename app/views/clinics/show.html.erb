<div class="container">
	<div class="row-fluid">
		<div class="span10 offset1">
			<div class="span12">
				<legend>
					<h2 class="h2-title"> <%= @clinic.name %> </h2>
				</legend>
			</div>
			<div class="span4 pull-right">
				<div>
					<% if current_login.has_role? :administrator %>
					<h6 style="color: lightgray; font-weight: normal; text-transform: uppercase;">Dados do gestor</h6>
					<hr/>
					<div class="row-fluid">
						<div class="span3">
							<b>Email</b>
						</div>
						<div class="span9">
							<%= @clinic.email %>
						</div>
					</div>
					<div class="row-fluid">
						<div class="span3">
							<b>Telemóvel</b>
						</div>
						<div class="span9">
							<%= @clinic.telephone %>
						</div>
					</div>
					<br/>
					<%end%>
				</div>
	
				<div>
					<h6 style="color: lightgray; font-weight: normal; text-transform: uppercase;">Consumos da Clínica</h6>
					<hr/>
					<div class="row-fluid">
						<div class="span10">
							Consultas
							<div class="progress <%= @progressBarClass %>">
								<div class="bar" style="width: <%= @appointmentsRatio %>%;"></div>
							</div>
						</div>
						<div class="span2">
							<br/>
							<%= @nAppointments.to_i - @appointmentsLeft.to_i %>/<%= @nAppointments %>
						</div>
					</div>
				</div>
			</div>
			<div class="span6 pull-left" style="margin-left:0px;">

				<h6 style="color: lightgray; font-weight: normal; text-transform: uppercase;">Dados da clínica</h6>
				<hr/>
				<div class="row-fluid">
					<div class="span3">
						<b>Morada</b>
					</div>
					<div class="span9">
						<%= @clinic.address %>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span3">
						<b>Telefone</b>
					</div>
					<div class="span9">
						<%= @clinic.telephone %>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span3">
						<b>Email</b>
					</div>
					<div class="span9">
						<%= @clinic.email %>
					</div>
				</div>
				<br/>
				<div class="row-fluid">
					<div class="span3">
						<b>NIF</b>
					</div>
					<div class="span9">
						<%= @clinic.fiscal_number %>
					</div>
				</div>
				<% if current_login.has_role? :administrator %>
				<div class="row-fluid">
					<div class="span3">
						<b>Estado</b>
					</div>
					<% if @clinic.deleted_at == nil %>
					<div class="span9">
						Ativa
					</div>
					<% else %>
					<div class="span9">
						Inactiva
					</div>
					<% end %>
				</div>
				<% end %>
			</div>
			<br/>
			<div style="clear:both;margin-bottom: 15px;"></div>
			<div class="row-fluid">
				<legend>
					<h3 class="h2-title">Historial de Pagamentos</h3>
				</legend>
			    <%if current_login.has_role? :administrator %>
		            <%= render 'paymentsAdministrator' %>
		        <%elsif current_login.has_role? :manager %>
		            <%= render 'paymentsManager' %>
		        <%end%>
			</div>

			<div class="row-fluid">

				<% if current_login.has_role? :administrator%>
					<% if @clinic.deleted_at == nil%>
						<%= link_to "Desativar" , clinic_path(@clinic), :method => :delete, :confirm => "Tem a certeza?", :class => 'btn btn-danger span2 pull-right', :style => 'margin-left: 10px; margin-top:10px;' %>
					<% else %>
						<%= link_to "Ativar" , clinic_path(@clinic), :method => :delete, :confirm => "Tem a certeza?", :class => 'btn btn-success span2 pull-right', :style => 'margin-left: 10px; margin-top:10px;' %>
					<% end %>
				<% end %>

				<%= link_to "Editar" ,edit_clinic_path(@clinic),  :class => 'btn btn-warning span2 pull-right', :style => 'margin-top:10px;' %>

			</div>

		</div>
	</div>
	<div class="span3"></div>

</div>