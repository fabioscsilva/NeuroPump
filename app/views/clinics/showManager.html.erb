<%# encoding: utf-8 %>


<div class="container">
  <div class="row-fluid">
    <div class="span8 offset2" style="padding: 40px;padding-right:80px;padding-top: 20px;-webkit-box-shadow: 0 2px 10px rgba(0, 0, 0, .25);-moz-box-shadow: 0 2px 10px rgba(0,0,0,.25);box-shadow: 0 2px 10px rgba(0, 0, 0, .25);background-color: white;">
      <div class="span4 pull-right offset1">
        <div style="margin-top: 60px;">
          <h6 style="color: lightgray; font-weight: normal; text-transform: uppercase;">Capacidade da clínica</h6><hr/>
          <div class="row-fluid">
            <div class="span10">
              Pacientes
              <div class="progress ">
                <div class="bar" style="width: <%= @clinic.patients.count * 10%>%;"></div>
              </div>
            </div>
            <div class="span2">
              <br/>
              <%= @clinic.patients.count%>/10
            </div>
          </div>
          <div class="row-fluid">
            <div class="span10">
              Neuropsicólogos (as)
              <div class="progress ">
                <div class="bar" style="width: <%= @clinic.neuropsychologists.count * 10%>%;"></div>
              </div>
            </div>
            <div class="span2">
              <br/>
              <%= @clinic.neuropsychologists.count%>/10
            </div>
          </div>
          <div class="row-fluid">
            <div class="span10">
              Secretários (as)
              <div class="progress ">
                <div class="bar" style="width: <%= @clinic.secretaries.count * 10%>%;"></div>
              </div>
            </div>
            <div class="span2">
              <br/>
              <%= @clinic.secretaries.count%>/10
            </div>
          </div>
          <!--div class="row-fluid">
            <div class="span10">
              Consultas Agendadas
              <div class="progress progress-danger">
                <div class="bar" style="width: 80%;"></div>
              </div>
            </div>
            <div class="span2">
              <br/>
              8/10
            </div>
          </div-->
        </div>
      </div>
      <div class="span7">
        <h4 style="margin-bottom: 30px;"><%= @clinic.name %></h4>
        <h6 style="color: lightgray; font-weight: normal; text-transform: uppercase;">Dados da clínica</h6><hr/>
        <div class="row-fluid">
          <div class="span3"><b>Morada</b></div>
          <div class="span9"><%= @clinic.address %></div>
        </div>
        <div class="row-fluid">
          <div class="span3"><b>Telefone</b></div>
          <div class="span9"><%= @clinic.telephone %></div>
        </div>
        <div class="row-fluid">
          <div class="span3"><b>Email</b></div>
          <div class="span9"><%= @clinic.email %></div>
        </div>
        <br/>
        <div class="row-fluid">
          <div class="span3"><b>NIF</b></div>
          <div class="span9"><%= @clinic.fiscal_number %></div>
        </div>
        <div class="row-fluid" style="margin-top: 15px;">
          <div class="span4">
            <button type="button" class="btn-success" style="margin-top:10px;">
              <a class="btn-success" href="<%= edit_clinic_path(@clinic) %>">Editar Dados</a>
            </button>
          </div>
        </div>
      </div>
      <br/>
      <div class="span12">
        <h3>Historial de Consultas</h3>

        <div class="span12" id="chart_div" style="height: 300px;">
        </div>
      </div>
    </div>
  </div>
  <div class="span3"></div>
</div>