<script type="text/javascript">
        function echeck(str) {
            var at="@"
            var dot="."
            var lat=str.indexOf(at)
            var lstr=str.length
            var ldot=str.indexOf(dot)

            if (str.indexOf(at)==-1){
                return false
            }
            if (str.indexOf(at)==-1 || str.indexOf(at)==0 || str.indexOf(at)==lstr){
                return false
            }
            if (str.indexOf(dot)==-1 || str.indexOf(dot)==0 || str.indexOf(dot)==lstr){
                return false
            }
            if (str.indexOf(at,(lat+1))!=-1){
                return false
            }
            if (str.substring(lat-1,lat)==dot || str.substring(lat+1,lat+2)==dot){
                alert("Invalid E-mail ID")
                return false
            }
            if (str.indexOf(dot,(lat+2))==-1){
                return false
            }

            if (str.indexOf(" ")!=-1){
                return false
            }
            return true;
        }

        function nameValidation()
        {
            if (document.getElementById('name').value) {
                $('#name').css({"border":"solid 1px #6CD54B"});
                nvalidation = true;
            } else{
                $('#name').css({"border":"solid 1px #f00"});
                nvalidation = false;
            };

            return nvalidation;
        }

        function addressValidation()
        {
            if (document.getElementById('address').value) {
                $('#address').css({"border":"solid 1px #6CD54B"});
                avalidation = true;
            } else{
                $('#address').css({"border":"solid 1px #f00"});
                avalidation = false;
            };

            return avalidation;
        }

        function fiscalValidation()
        {
            if (document.getElementById('fiscal_number').value.length>8) {
                $('#fiscal_number').css({"border":"solid 1px #6CD54B"});
                fvalidation = true;
            } else{
                $('#fiscal_number').css({"border":"solid 1px #f00"});
                fvalidation = false;
            };

            return fvalidation;
        }

        function telephoneValidation()
        {
            if (document.getElementById('telefone').value && document.getElementById('telefone').value.length>=9) {
                $('#telefone').css({"border":"solid 1px #6CD54B"});
                tvalidation = true;
            } else{
                if (document.getElementById('telefone').value && document.getElementById('telefone').value.length<9) {
                    $('#telefone').css({"border":"solid 1px #f00"});
                    tvalidation = false;
                } else{
                   $('#telefone').css({"border":"solid 1px #0052FF"});
                    tvalidation = true;
                };
            };

            return tvalidation;
        }

        function emailValidation()
        {
            if (echeck(document.getElementById('email').value)) {
                $('#email').css({"border":"solid 1px #6CD54B"});
                evalidation = true;
            } else{
                $('#email').css({"border":"solid 1px #f00"});
                evalidation = false;
            };
            return evalidation;
        }

        function validation()
        {
            return nameValidation() && addressValidation() && fiscalValidation() && telephoneValidation() && emailValidation();
        }
    </script>
    
