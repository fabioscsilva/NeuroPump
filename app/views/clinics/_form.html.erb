  <% end %>

    <div>
      <%= f.label :name, "Nome" %>
      <%= f.text_field :name,  :class => "span12", :placeholder => "Introduza o nome da clinica", :required => true %>
    </div>
    <div>
      <%= f.label :address, "Morada" %>
      <%= f.text_field :address, :class => "span12", :placeholder => "Introduza a morada da clinica", :required => true  %>
