<%= simple_form_for(@clinic) do |f| %>
  <% if @clinic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@clinic.errors.count, "error") %> prohibited this clinic from being saved:</h2>

      <ul>
      <% @clinic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div>
      <%= f.label :name, "Nome" %>
      <%= f.text_field :name,  :class => "span12", :placeholder => "Introduza o nome da clinica" %>
    </div>
    <div>
      <%= f.label :address, "Morada" %>
      <%= f.text_field :address, :class => "span12", :placeholder => "Introduza a morada da clinica" %>
    </div>
    <div class="row-fluid">
      <div class="span6">
        <%= f.label :telephone, "Telefone" %>
        <%= f.text_field :telephone, :class => "span12", :placeholder => "2XXXXXXXX" %>
      </div>
      <div class="span6">
        <%= f.label :email, "Email" %>
        <%= f.text_field :email, :class => "span12", :placeholder => "example@neuropump.com" %>
      </div>
    </div>
    <div>
      <%= f.label :fiscal_number, "NIF" %>
      <%= f.text_field :fiscal_number, :class => "span12", :placeholder => "1XXXXXXXX" %>
    </div>
    <br/>
    <div>
      <%= submit_tag "Submeter", :class => "btn btn-success span2 offset05 pull-right", :style => "margin-left: 10px;" %>
    </div>
    <div>
      <%= button_tag "Limpar", :class => "btn btn-danger span2 pull-right", :type => "reset" %>
    </div>
<% end %>
